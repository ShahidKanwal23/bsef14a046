@model DataAccess.Payment
@{
    ViewBag.Title = "cart";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bootstrap E-commerce Templates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
</head>
<body>

    <div id="wrapper" class="container">

        <section class="main-content">
            <div class="row">
                    <div class="span9">
                        <h4 class="title"><span class="text"><strong>Your</strong> Cart</span></h4>
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    List<DataAccess.CartItem> list = (List<DataAccess.CartItem>)Session["list"];
                                    for (int i = 0; i < list.Count; i++)
                                    {
                                        <tr>

                                            <td><a href="product_detail.html"><img alt="" src="~/themes/images/@list[i].Product.p_picture" style=" width:100px;height:100px;"></a></td>
                                            <td>@list[i].Product.p_name</td>
                                            <td><input type="text" placeholder="@list[i].quantity" class="input-mini" value=""></td>
                                            <td>@list[i].Product.p_price</td>
                                            <td>@list[i].total_cost</td>


                                        </tr>

                                    }



                                }

                                <tr>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>


                                </tr>
                            </tbody>
                        </table>
                        <center>
                            <div><h2>Your Receipt</h2></div>
                            <div class="row" style="border:dashed;margin-left:20px;">
                                <div class="col-md-12">
                                  
                                    <div class="col-md-4 offset-md-1">
                                        <h4 class="text-center">Name</h4>
                                        <div class="text-center">
                                            <strong>@Model.User.first_name @Model.User.last_name</strong><br>
                                        </div>
                                    </div><hr>
                                    <div class="col-md-4 offset-md-2">
                                        <h4 class="text-center">Billed To:</h4>
                                        <address>
                                            @Model.User.address
                                        </address>
                                    </div><hr>
                                    <div class="col-md-4 offset-md-2">
                                        <h4 class="text-center">Payment ID:</h4>
                                        <address>
                                            @Model.pay_id
                                        </address>
                                    </div><hr>
                                    <div class="col-md-4 offset-md-2">
                                        <h4 class="text-center">Payment Type:</h4>
                                        
                                            @Model.pay_type
                                        
                                    </div><hr>
                                    <div class="col-md-4 offset-md-2">
                                        <h3 class="text-center">Order Total:</h3>
                                        <address>
                                            @Model.amount
                                        </address>
                                    </div><hr>
                                </div>
                            </div>
                        </center>
                       
                       
                    </div>
            </div>
        </section>


    </div>
    <script src="themes/js/common.js"></script>
    <script>
        $(document).ready(function () {
            $('#checkout').click(function (e) {
                document.location.href = "checkout.html";
            })
        });
    </script>
</body>
</html>