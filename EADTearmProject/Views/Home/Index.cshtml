@model List<EADTearmProject.Models.ProductModel>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bootstrap E-commerce Templates</title>
</head>
<body>
   
    <div id="wrapper" class="container">
       
        <section class="main-content">
            <div class="row">
                <div class="span12">
                    <div class="row">
                        <div class="span12">
                            <h4 class="title">
                                <span class="pull-left"><span class="text"><span class="line">Feature <strong>Products</strong></span></span></span>
                                <span class="pull-right">
                                    <a class="left button" href="#myCarousel" data-slide="prev"></a><a class="right button" href="#myCarousel" data-slide="next"></a>
                                </span>
                            </h4>
                            <div id="myCarousel" class="myCarousel carousel slide">
                                <div class="carousel-inner">
                                    <div class="active item">
                                        <ul class="thumbnails">
                                            @{
                                                for (int i = 0; i < 4 && i < @Model.Count;i++ )
                                                {
                                                    <li class="span3">
                                                        <div class="product-box">
                                                            <span class="sale_tag"></span>
                                                            <a href="/Home/product_detail/@Model[i].p_id"><img alt="" src="~/themes/images/@Model[i].p_picture" style="width:250px;height:250px;"></a><br />
                                                            <a href="/Home/product_detail/@Model[i].p_id" class="title">Fusce id molestie massa</a><br />
                                                            <a href="#" class="category">Phasellus consequat</a>
                                                            <p class="price">@Model[i].p_price</p>
                                                        </div>
                                                    </li>
                                                }
                                            }

                                        </ul>
                                    </div>
                                    <div class="item">
                                        <ul class="thumbnails">
                                            @{
                                                for (int j = 4; j < @Model.Count; j++)
                                                {
                                                    <li class="span3">
                                                        <div class="product-box">
                                                            <span class="sale_tag"></span>
                                                            <a href="/Home/product_detail/@Model[j].p_id"><img alt="" src="~/themes/images/@Model[j].p_picture" style="width:250px;height:250px;"></a><br />
                                                            <a href="/Home/product_detail/@Model[j].p_id" class="title">Fusce id molestie massa</a><br />
                                                            <a href="#" class="category">Phasellus consequat</a>
                                                            <p class="price">@Model[j].p_price</p>
                                                        </div>
                                                    </li>
                                                }
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="span12">
                            <h4 class="title">
                                <span class="pull-left"><span class="text"><span class="line">Latest <strong>Products</strong></span></span></span>
                                <span class="pull-right">
                                    <a class="left button" href="#myCarousel-2" data-slide="prev"></a><a class="right button" href="#myCarousel-2" data-slide="next"></a>
                                </span>
                            </h4>
                            <div id="myCarousel-2" class="myCarousel carousel slide">
                                <div class="carousel-inner">
                                    <div class="active item">
                                        <ul class="thumbnails">
                                            @{
                                                List<EADTearmProject.Models.ProductModel> prodList=ViewBag.prodlist;
                                                for (int i = 0; i < 4 && i < prodList.Count; i++)
                                                {
                                                    <li class="span3">
                                                        <div class="product-box">
                                                            <span class="sale_tag"></span>
                                                            <a href="/Home/product_detail/@prodList[i].p_id"><img alt="" src="~/themes/images/@prodList[i].p_picture" style="width:250px;height:250px;"></a><br />
                                                            <a href="/Home/product_detail/@prodList[i].p_id" class="title">Fusce id molestie massa</a><br />
                                                            <a href="#" class="category">Phasellus consequat</a>
                                                            <p class="price">@prodList[i].p_price</p>
                                                        </div>
                                                    </li>
                                                }
                                            }

                                        </ul>
                                    </div>
                                    <div class="item">
                                        <ul class="thumbnails">
                                            @{
                                                for (int j = 4; j < 8 && j < prodList.Count; j++)
                                                {
                                                    <li class="span3">
                                                        <div class="product-box">
                                                            <span class="sale_tag"></span>
                                                            <a href="/Home/product_detail/@prodList[j].p_id"><img alt="" src="~/themes/images/@prodList[j].p_picture" style="width:250px;height:250px;"></a><br />
                                                            <a href="/Home/product_detail/@prodList[j].p_id" class="title">Fusce id molestie massa</a><br />
                                                            <a href="#" class="category">Phasellus consequat</a>
                                                            <p class="price">@prodList[j].p_price</p>
                                                        </div>
                                                    </li>
                                                }
                                            
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>



    </div>
    <script src="~/themes/js/common.js"></script>
    <script src="~/themes/js/jquery.flexslider-min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(document).ready(function () {
                $('.flexslider').flexslider({
                    animation: "fade",
                    slideshowSpeed: 4000,
                    animationSpeed: 600,
                    controlNav: false,
                    directionNav: true,
                    controlsContainer: ".flex-container" // the container that holds the flexslider
                });
            });
        });
    </script>
</body>
</html>